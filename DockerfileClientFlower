FROM python:3.9-buster

ENV RUN_DIR="/app"


WORKDIR $RUN_DIR

COPY . $RUN_DIR
#COPY $WORKER_SRC_PATH $RUN_DIR
#COPY "data_loading.py" $RUN_DIR
#COPY "../utils" $RUN_DIR

COPY requirements.txt requirements.txt
RUN pip3 install -r requirements.txt
ENV PYTHONPATH "${PYTHONPATH}:${RUN_DIR}"

EXPOSE 8000


CMD python3 $RUN_DIR/Flower/client.py